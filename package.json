{
  "name": "chat-app",
  "version": "0.0.0",
  "author": "Mateusz Kasprzak <kacpak@gmail.com>",
  "description": "Chat application with localisation",
  "license": null,
  "main": "./dist/electron/main.js",
  "scripts": {
    "clean": "rimraf dist && cross-env BUILD_TARGET=clean node .build-scripts/build.js",
    "build:pc": "node .build-scripts/build.js && electron-builder",
    "build:web": "cross-env BUILD_TARGET=web node .build-scripts/build.js",
    "dev:pc": "node .build-scripts/dev-runner.js",
    "dev:web": "webpack-dev-server --config .build-scripts/webpack.web.config.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "run-s clean pack:*",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .build-scripts/webpack.electron.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .build-scripts/webpack.renderer.config.js",
    "postinstall": "npm run lint:fix"
  },
  "repository": { 
    "type": "git",
    "url": "https://github.com/chat-sggw/app.git"
  },
  "build": {
    "productName": "SGGW Chat",
    "appId": "pl.sggw.chat",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "axios": "^0.17.0",
    "material-design-icons": "^3.0.1",
    "mdi": "^2.0.46",
    "moment": "^2.19.1",
    "vue": "^2.5.2",
    "vue-electron": "^1.0.6",
    "vue-momentjs": "^0.1.1",
    "vue-router": "^3.0.1",
    "vuetify": "^0.16.9",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.1",
    "babel-minify-webpack-plugin": "^0.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "cfonts": "^1.1.3",
    "chalk": "^2.1.0",
    "chunk-manifest-webpack-plugin": "^1.1.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.4",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "1.7.9",
    "electron-builder": "^19.19.1",
    "electron-debug": "^1.4.0",
    "electron-devtools-installer": "^2.2.0",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-friendly-formatter": "^3.0.0",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.5",
    "html-webpack-plugin": "^2.30.1",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "url-loader": "^0.6.2",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^13.0.5",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.4.2",
    "webpack": "^3.5.2",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-manifest-plugin": "^1.3.2",
    "webpack-md5-hash": "^0.0.5",
    "webpack-merge": "^4.1.1"
  }
}
